<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp">

            <ImageView
                android:id="@+id/avatarImageViewTest"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/UsernameTextViewTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"/>

                <TextView
                    android:id="@+id/fullnameTextViewTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:fontFamily="monospace"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/DesTextViewTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="left"
                    android:fontFamily="monospace"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/editProfileBtnTest"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Chỉnh sửa thông tin"
            />
        <Button
            android:id="@+id/changePassBtnTest"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đổi mật khẩu"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/LogoutBtnTest"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Logout"
            android:textSize="15dp"
            />


    </LinearLayout>

</ScrollView>