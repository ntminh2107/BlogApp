<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.ProfileActivityTest">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatarImageViewTest"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_ic"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/fullnameTextViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:fontFamily="monospace"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/birthDateTextViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/birtPlaceTextViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:fontFamily="monospace"/>
            <TextView
                android:id="@+id/genderTextViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:fontFamily="monospace"/>

            <Button
                android:id="@+id/editProfileBtnTest"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="Chỉnh sửa thông tin"
                />
            <Button
                android:id="@+id/changePassBtnTest"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Đổi mật khẩu"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/LogoutBtnTest"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logout"
                android:textSize="15dp"
                />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>